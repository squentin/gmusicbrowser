##title2:       text(markup='by <b><big>'.pesc($artist).'</big></b>',pad=2,x=title:w)
##title:        text(markup='<b><big>'.pesc($album).'</big></b> ',pad=2)
#title: text(markup='<b><big>'.pesc($album).'</big></b> ' . if($year,'<small>('.pesc($year).')</small>'),pad=2)
