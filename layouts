[Volume]
VSize= 100 VolSlider
VBox = LabelVol(xalign=.5) _VolSlider(vertical=1)

[Equalizer]
Default         = Window(size=300x160)
VBmain          = _Equalizer
Title           = Equalizer

[Progress]
VBmain          = _ProgressV(lastclose=1)
Title           = Progress

[Karaoke]
