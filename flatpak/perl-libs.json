{
    "name": "perl-libs",
    "modules": [
        {
            "name": "perl",
            "no-autogen": true,
            "config-opts": [
                "-des",
                "-Duseshrplib"
            ],
            "build-options": {
                "cflags": "-fPIC",
                "ldflags": "-fpic"
            },
            "post-install": [
                "find ${FLATPAK_DEST}/lib/perl5/ -name \\*.so -exec chmod u+w {} \\;"
            ],
            "cleanup": [
                "/man",
                "*.pod",
                "*.h"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.cpan.org/src/5.0/perl-5.30.1.tar.gz",
                    "sha256": "bf3d25571ff1ee94186177c2cdef87867fd6a14aa5a84f0b1fb7bf798f42f964"
                },
                {
                    "type": "script",
                    "dest-filename": "configure",
                    "commands": [
                        "exec ./configure.gnu $@"
                    ]
                }
            ]
        },
